@model List<TraineeNameWithCourseNameDegreeStatus>


<h1>Get Trainees in @Model[0].CourseName</h1>

<br />

<table class="table">
    <thead>
        <tr style="text-align: center;">
            <th>Trainee Name</th>
            <th>Degree</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;"> 
                <td>@item.TraineeName</td>
                <td>@item.Degree</td>
                <td style ="background-color: @item.Color !important;">@item.Status</td>
            </tr>
        }
    </tbody>
</table>
