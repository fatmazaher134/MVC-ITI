@model CourseDataViewModel
@{
    SelectList departments = new SelectList(Model.departmentList, "Id","Name");
    ViewData["Title"] = "Add";
}

<h1>Add New course</h1>

<form asp-action ="SaveAdd" asp-controller="Course" method="post" class="form form-control">
    <div>
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="@Model.Degree"></label>
        <input asp-for="@Model.Degree" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="@Model.MinDegree"></label>
        <input asp-for="@Model.MinDegree" />
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="@Model.Hours"></label>
        <input asp-for="@Model.Hours" />
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label asp-for="@Model.DepartmentId"></label>
        <select asp-for="@Model.DepartmentId" asp-items = "departments">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <br />
    <div>
        <input type="submit" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Course" class="btn btn-secondary">Back to List</a>
    </div>


</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

